---
import { home } from '../../data/site';
---

<main class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Hero Content -->
    <div class="relative z-10 px-4 pt-32 pb-16">
        <div class="max-w-5xl mx-auto text-center">
            <!-- Subtitle -->
            <p class="text-gray-300 font-medium mb-2 opacity-0 animate-fade-up">
                {home.subtitle}
            </p>

            <!-- Service Notice -->
            <div class="flex justify-center flex-wrap gap-3 mb-4 opacity-0 animate-fade-up animation-delay-50">
                <span class="px-3 py-1 text-sm bg-gray-800/50 backdrop-blur-sm rounded-full border border-gray-700/50 text-gray-300">
                    {home.serviceNotice}
                </span>
                <span class="px-3 py-1 text-sm bg-gray-800/50 backdrop-blur-sm rounded-full border border-gray-700/50 text-gray-300">
                    {home.serviceSubNotice}
                </span>
                <span class="px-3 py-1 text-sm bg-gray-800/50 backdrop-blur-sm rounded-full border border-gray-700/50 text-gray-300">
                    {home.serviceExtra}
                </span>
            </div>

            <!-- Title with animated gradient -->
            <h1 
                class="text-5xl md:text-7xl font-bold font-cal bg-gradient-to-r from-orange-500 via-purple-500 to-blue-500 bg-clip-text text-transparent animate-gradient-x whitespace-pre-line"
            >
                {home.title}
            </h1>

            <!-- Description -->
            <p class="mt-8 text-xl text-white max-w-2xl mx-auto font-sans opacity-0 animate-fade-up animation-delay-100">
                {home.description}
            </p>

            <!-- Stats -->
            <div class="flex flex-wrap justify-center gap-8 max-w-3xl mx-auto mt-16 opacity-0 animate-fade-up animation-delay-200">
                {home.stats.map(stat => (
                    <div class="text-center min-w-[200px] flex-1">
                        <div class="text-4xl font-bold font-cal bg-gradient-to-r from-purple-400 to-blue-400 bg-clip-text text-transparent">
                            {stat.value}
                        </div>
                        <div class="text-sm text-gray-400 mt-1">{stat.label}</div>
                    </div>
                ))}
            </div>

            <!-- Features -->
            <div class="cursor-default grid md:grid-cols-3 gap-8 max-w-4xl mx-auto mt-16 opacity-0 animate-fade-up animation-delay-300">
                {home.features.map(feature => (
                    <div class="bg-gray-900/50 backdrop-blur-sm rounded-2xl p-6 border border-gray-800/50 hover:border-purple-500/50 transition-colors duration-300">
                        <h3 class="text-xl font-bold text-white mb-2">{feature.title}</h3>
                        <p class="text-gray-400 text-sm">{feature.description}</p>
                    </div>
                ))}
            </div>

            <!-- CTA Buttons -->
            <div class="flex justify-center mt-10 opacity-0 animate-fade-up animation-delay-200">
                <a
                    href="#"
                    data-calendar-trigger
                    class="inline-flex items-center justify-center px-6 py-3 text-base font-medium rounded-xl text-white bg-purple-600 hover:bg-purple-700 transition-all duration-300"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="16" y1="2" x2="16" y2="6"></line>
                        <line x1="8" y1="2" x2="8" y2="6"></line>
                        <line x1="3" y1="10" x2="21" y2="10"></line>
                    </svg>
                    Schedule Appointment
                </a>
            </div>
        </div>
    </div>

  
</main>

<style>
    @keyframes float {
        0%, 100% { transform: translate(0, 0); }
        50% { transform: translate(-10px, 10px); }
    }

    @keyframes gradient-x {
        0%, 100% { background-size: 200% 100%; background-position: left center; }
        50% { background-position: right center; }
    }

    @keyframes fade-up {
        0% { opacity: 0; transform: translateY(20px); }
        100% { opacity: 1; transform: translateY(0); }
    }

    .animate-gradient-x {
        animation: gradient-x 15s ease infinite;
    }

    .animate-float {
        animation: float 8s ease-in-out infinite;
    }

    .animate-fade-up {
        animation: fade-up 1s ease forwards;
    }

    .animation-delay-100 {
        animation-delay: 100ms;
    }

    .animation-delay-200 {
        animation-delay: 200ms;
    }

    .animation-delay-300 {
        animation-delay: 300ms;
    }

    .animation-delay-400 {
        animation-delay: 400ms;
    }

    .animation-delay-1000 {
        animation-delay: 1000ms;
    }
</style>